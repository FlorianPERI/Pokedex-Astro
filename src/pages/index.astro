---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PokemonCard from '../components/PokemonCard.astro';

const response = await fetch("https://tyradex.tech/api/v1/gen");
const allGenerations = await response.json();

---

<Layout title="Welcome to PokeAstro !">
  <Header />
  <div class="flex flex-col flex-wrap w-full items-center justify-center text-center p-2">
  
    {allGenerations.map((generation) => (
  <ul>
    <li><a href=`gen/${generation.generation}`> Generation : {generation.generation}</a></li>
    </ul>
 ))}
</div>
</Layout>


